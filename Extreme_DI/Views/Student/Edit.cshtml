@using Extreme_DI.Services
@model StudentModel
    
@inject IStudentRepository StudentRepository    

<!DOCTYPE html>

<html>
<head>
    <title>title</title>
</head>
<body>
<div>
    <h3>@ViewBag.Title</h3>
    @using (Html.BeginForm("Edit", "Student", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.StudentID, Model.StudentID)    
        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "control-label" })<br />
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control"})
            @Html.ValidationMessageFor(m => m.Name)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Course, new { @class = "control-label" })<br />
            @Html.TextBoxFor(m => m.Course, new { @class = "form-control", type = "number" })
            @Html.ValidationMessageFor(m => m.Course)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Group, new { @class = "control-label" })<br />
            @Html.TextBoxFor(m => m.Group, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Group)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Surname, new { @class = "control-label" })<br />
            @Html.TextBoxFor(m => m.Surname, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Surname)
        </div>
        <div class="form-group">
            <input type="submit" value="Save changes" class="btn btn-default" />
        </div>
    }
</div>
</body>
</html>